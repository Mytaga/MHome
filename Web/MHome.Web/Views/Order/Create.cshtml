@using MHome.Data.Models.Enums
@model MHome.Data.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1 style ="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Make Order</h1>

<h4 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Order</h4>
<hr />
<div class="row">
    <div class="col-md-4" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Quantity" class="control-label">Quantity</label>
                <input id="Quantity" name="Quantity" class="form-control" type="text" />
            </div>
            <div class="form-group">
                <label asp-for="DeliveryType" class="control-label"></label>
                <select asp-for="DeliveryType" class="form-control" asp-items="Html.GetEnumSelectList<DeliveryType>()"></select>
                <span asp-validation-for="DeliveryType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input class="btn btn-dark" type="submit" value="Make Order" />
                <a class="btn btn-dark" asp-controller="Furniture" asp-action="All">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
