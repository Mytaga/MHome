@using MHome.Data.Models.Enums
@model MHome.Data.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h1>Make Order</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeliveryType" class="control-label"></label>
                <select asp-for="DeliveryType" class="form-control" asp-items="Html.GetEnumSelectList<DeliveryType>()"></select>
                <span asp-validation-for="DeliveryType" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Make Order" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="All">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
