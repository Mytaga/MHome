@using MHome.Common
@model MHome.Web.ViewModels.StoreViewModels.AllStoresViewModel

@{
    ViewData["Title"] = "Stores";
}

<div class="row">
    <div class="col-md-4">
        <h1>Stores</h1>
        @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <p>
                <a class="btn btn-info" asp-action="Create">Create New</a>
            </p>
        }
    </div>
</div>

@foreach (var item in Model.AllStores)
{
    <div class="card" style="width: 22rem;">
        <img class="card-img-top" src="/img/M-Home.jpg" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">Name: @item.Name</h5>
            <h5 class="card-title">Phone: @item.PhoneNumber</h5>
            <h5 class="card-title">Email: @item.Email</h5>
            <h5 class="card-title">Address: @item.Address</h5>
            <h5 class="card-title">Town: @item.TownName</h5>
        </div>
    </div>
}

