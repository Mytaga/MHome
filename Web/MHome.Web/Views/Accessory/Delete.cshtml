@model MHome.Data.Models.Accessory

@{
    ViewData["Title"] = "Delete";
}

<h1 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Delete</h1>

<h3 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Are you sure you want to delete this?</h3>
<div style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-dark" asp-action="All">Back</a>
    </form>
</div>
