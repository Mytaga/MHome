@model MHome.Web.ViewModels.ProfileViewModels.ListProfileViewModel

@{
    ViewData["Title"] = "Profile";
}

<h1 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">User Profile</h1>

<div>   
    <hr />
    <dl class="row">
        <div class="col-md-4" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">
            <dt class="col-sm-10 mt-4">
                First Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-10">
                Last Name:
            </dt>
            <dd class="col-sm-10">  
                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt class="col-sm-10">
                Phone Number:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt class="col-sm-10">
                Address:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-10">
                Town:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Town)
            </dd>
            <dt class="col-sm-10">
                Client Card:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ClientCard)
            </dd>
        </div>
        <div class="col-md-8">
            <img class="img-thumbnail mx-auto mt-4" style="width: 350px" src="@Model.ImageUrl" alt="@Model.FirstName" />
        </div>
     
    </dl>
</div>

<div align="center" class="mt-4">
    <a class="btn btn-dark" asp-action="DetailsBoughtFurniture" asp-route-id="@Model.Id">Bought Furniture</a>
    <a class="btn btn-dark" asp-action="DetailsBoughtAccessories" asp-route-id="@Model.Id">Bought Accessories</a>
    <a class="btn btn-dark" asp-action="DetailsCompletedOrders" asp-route-id="@Model.Id">Completed Orders</a>
 </div> 

<div align="center" class="mt-4">
    <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Back</a>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
</div>